all: compile

SRC =  $(shell pwd)

compile: makedir main.o core.o
	g++ ${SRC}/temp/main.o ${SRC}/temp/core.o -o ${SRC}/temp/main.out

core.o: core.cpp
	g++ -c core.cpp -o ${SRC}/temp/core.o 

main.o: main.cpp
	g++ -c main.cpp -o ${SRC}/temp/main.o

makedir:
	mkdir -p ${SRC}/temp

clean:
	rm -rf ${SRC}/temp
